        "/api/trivias/{triviaId}/answer": {
            "post": {
                "tags": [
                    "Participación en Trivias"
                ],
                "summary": "Enviar respuesta a una pregunta de la trivia",
                "operationId": "32a4a9fb3c60b24d3d953f39ed758b05",
                "parameters": [
                    {
                        "name": "triviaId",
                        "in": "path",
                        "description": "ID de la trivia",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "question_id",
                                    "question_option_id"
                                ],
                                "properties": {
                                    "question_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "question_option_id": {
                                        "type": "integer",
                                        "example": 3
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Respuesta enviada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Respuesta enviada correctamente"
                                        },
                                        "is_correct": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "points_earned": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "total_score": {
                                            "type": "integer",
                                            "example": 8
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "ErrorResponse": {
                "title": "Respuesta de Error",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Mensaje de error"
                    },
                    "errors": {
                        "description": "Detalles específicos del error",
                        "type": "object",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "SuccessResponse": {
                "title": "Respuesta Exitosa",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Operación exitosa"
                    },
                    "data": {
                        "description": "Datos de la respuesta",
                        "type": "object",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "TriviaRanking": {
                "title": "Ranking de Trivia",
                "properties": {
                    "user_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "user_name": {
                        "type": "string",
                        "example": "Juan Pérez"
                    },
                    "total_score": {
                        "description": "Puntaje total obtenido",
                        "type": "integer",
                        "example": 15
                    },
                    "correct_answers": {
                        "description": "Número de respuestas correctas",
                        "type": "integer",
                        "example": 5
                    },
                    "total_questions": {
                        "description": "Total de preguntas respondidas",
                        "type": "integer",
                        "example": 6
                    },
                    "completion_time": {
                        "description": "Tiempo de finalización",
                        "type": "string",
                        "format": "date-time"
                    },
                    "rank": {
                        "description": "Posición en el ranking",
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "Question": {
                "title": "Pregunta",
                "required": [
                    "id",
                    "question",
                    "difficulty"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
