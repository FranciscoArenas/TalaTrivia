        "/api/questions": {
            "get": {
                "tags": [
                    "Preguntas"
                ],
                "summary": "Listar preguntas",
                "operationId": "e64d3c7a745fc05662a4a1e1eb3d96ab",
                "parameters": [
                    {
                        "name": "difficulty",
                        "in": "query",
                        "description": "Filtrar por dificultad",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "easy",
                                "medium",
                                "hard"
                            ]
                        }
                    },
                    {
                        "name": "created_by",
                        "in": "query",
                        "description": "Filtrar por creador",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de preguntas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "questions": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Question"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Preguntas"
                ],
                "summary": "Crear nueva pregunta",
                "operationId": "788d85763184ddf1b557afb040547f32",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "question",
                                    "difficulty",
                                    "options"
                                ],
                                "properties": {
                                    "question": {
                                        "type": "string",
                                        "example": "¿Cuál es la capital de Francia?"
                                    },
                                    "difficulty": {
                                        "type": "string",
                                        "enum": [
                                            "easy",
                                            "medium",
                                            "hard"
                                        ],
                                        "example": "easy"
                                    },
                                    "options": {
                                        "type": "array",
                                        "items": {
                                            "required": [
                                                "option_text",
                                                "is_correct"
                                            ],
                                            "properties": {
                                                "option_text": {
                                                    "type": "string",
                                                    "example": "París"
                                                },
                                                "is_correct": {
                                                    "type": "boolean",
                                                    "example": true
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Pregunta creada exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Pregunta creada exitosamente"
                                        },
                                        "question": {
                                            "$ref": "#/components/schemas/Question"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/trivias": {
