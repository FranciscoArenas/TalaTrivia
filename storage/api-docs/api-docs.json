                            "type": "string",
                            "enum": [
                                "draft",
                                "active",
                                "completed"
                            ]
                        }
                    },
                    {
                        "name": "created_by",
                        "in": "query",
                        "description": "Filtrar por creador",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de trivias",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "trivias": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Trivia"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Trivias"
                ],
                "summary": "Crear nueva trivia",
                "operationId": "ded9d2b9486f25f605f51384ef46fbfd",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "description",
                                    "question_ids",
                                    "user_ids"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Trivia de Historia"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Una trivia sobre historia mundial"
                                    },
                                    "starts_at": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2023-01-01T10:00:00Z"
                                    },
                                    "ends_at": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2023-01-01T12:00:00Z"
                                    },
                                    "question_ids": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        },
                                        "example": [
                                            1,
                                            2,
                                            3
                                        ]
                                    },
                                    "user_ids": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        },
                                        "example": [
                                            1,
                                            2,
                                            3
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Trivia creada exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Trivia creada exitosamente"
                                        },
                                        "trivia": {
                                            "$ref": "#/components/schemas/Trivia"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
